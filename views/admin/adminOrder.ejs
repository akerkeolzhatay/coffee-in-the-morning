<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin panel - orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #FAEBD7, #FAEBD7);
            color: white;
        }
        .container {
            background: #222;
            padding: 20px;
            margin-top: 50px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.1);
        }
        .card {
            background: #333;
            color: white;
            border: none;
            border-radius: 8px;
        }
        .btn-danger {
            background: linear-gradient(135deg, #D2B48C, #ff0000);
            border: none;
            color: white;
        }
        .btn-back {
            background: linear-gradient(135deg, #D2B48C, #ff6347);
            border: none;
            color: white;
            font-weight: bold;
            display: block;
            width: 100%;
            margin-top: 20px;
            padding: 10px;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            transition: transform 0.2s;
        }
        .btn-back:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <%- include('navbar') %>
    <section class="sectionn">
    <div class="container">
        
        <h1 class="text-center mt-4">ðŸ“¦ Admin Orders</h1>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>ID orders</th>
                    <th>Users</th>
                    <th>Status</th>
                    <th>Data create</th>
                    <th>Total sums</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (orders && orders.length === 0) { %>
                    <tr>
                        <td colspan="6" class="text-center">Ð—Ð°ÐºÐ°Ð·Ð¾Ð² Ð½ÐµÑ‚</td>
                    </tr>
                <% } else if (orders) { %>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order._id %></td>
                            <td><%= order.userId ? order.userId.name : 'ÐŸÐ¾Ð»ÑŒÐ·Ð¾Ð²Ð°Ñ‚ÐµÐ»ÑŒ Ð½Ðµ Ð½Ð°Ð¹Ð´ÐµÐ½' %></td>
                            <td>
                                <select id="status-select-<%= order._id %>" onchange="updateStatus('<%= order._id %>')">
                                    <option value="In processing" <%= order.orderStatus === 'In processing' ? 'selected' : '' %>>In processing</option>
                                    <option value="Out for Delivery" <%= order.orderStatus === 'Out for Delivery' ? 'selected' : '' %>>Out for Delivery</option>
                                    <option value="Delivered" <%= order.orderStatus === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                </select>
                            </td>
                            <td><%= order.createdAt.toLocaleString() %></td>
                            <td><%= order.totalPrice.toLocaleString() %>â‚¸</td>
                            <td>
                                <button class="btn btn-danger" onclick="deleteOrder('<%= order._id %>')">Delete</button>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center">Mistake download orders</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <a href="/" class="btn-back">â¬… Back</a>
    
    </div>
</section>
    <script>
        async function updateStatus(orderId) {
            const newStatus = document.getElementById(`status-select-${orderId}`).value;

            const response = await fetch(`/api/v1/admin/orders/${orderId}/status`, {
                method: "PUT",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ status: newStatus })
            });

            const data = await response.json();
            if (data.success) {
                alert("Order status updated!");
            } else {
                alert("Error updating status");
            }
        }

        async function deleteOrder(orderId) {
            const confirmDelete = confirm("Are you sure you want to delete this order?");
            if (!confirmDelete) return;

            const response = await fetch(`/api/v1/admin/orders/${orderId}`, {
                method: "DELETE"
            });

            const data = await response.json();
            if (data.success) {
                alert("Order deleted!");
                window.location.reload(); 
            } else {
                alert("Error deleting order");
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>