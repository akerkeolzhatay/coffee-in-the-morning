        <!DOCTYPE html>
        <html lang="ru">
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>My orders</title>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
            <style>
                body {
                    background: linear-gradient(135deg, #1a1a1a, #2b2b2b);
                    color: white;
                }
                .container {
                    background: #222;
                    max-width: 600px;
                    padding: 20px;
                    margin-top: 50px;
                    border-radius: 10px;
                    box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.1);
                }
                .card {
                    background: #333;
                    color: white;
                    border: none;
                    border-radius: 8px;
                }
                .btn-danger {
                    background: linear-gradient(135deg, #ff4d4d, #ff0000);
                    border: none;
                    color: white;
                }
                .btn-back {
                    background: linear-gradient(135deg, #D2B48C, #ff6347);
                    border: none;
                    color: white;
                    font-weight: bold;
                    display: block;
                    width: 100%;
                    margin-top: 20px;
                    padding: 10px;
                    border-radius: 5px;
                    text-align: center;
                    text-decoration: none;
                    transition: transform 0.2s;
                }
                .btn-back:hover {
                    transform: scale(1.05);
                }
            </style>
        </head>
        <body>
            <%- include('navbar') %>
            <div style="margin-top:200px;" class="container">
                <h1 class="text-center mt-4">ðŸ“¦ My orders</h1>
                <div id="orders" class="row"></div>
                <a href="/" class="btn-back">â¬… Back</a>
            </div>

            <script>
                async function loadOrders() {
                    try {
                        const response = await fetch('/api/v1/cart/orders');
                        const data = await response.json();
                        if (!data.success) return;

                        const ordersContainer = document.getElementById('orders');
                        ordersContainer.innerHTML = "";

                        if (data.orders.length === 0) {
                            ordersContainer.innerHTML = `<p class="text-center">No orders</p>`;
                            return;
                        }

                        data.orders.forEach(order => {
                            let orderItem = document.createElement('div');
                            orderItem.classList.add('col-md-12', 'mb-3');

                            orderItem.innerHTML = `
                                <div class="card p-3">
                                    <h5 class="card-title">Order from ${new Date(order.createdAt).toLocaleString()}</h5>
                                    <p class="card-text"><strong>Total: ${order.totalPrice.toLocaleString()}â‚¸</strong></p>
                                    <p><strong>Paid:</strong> YES</p>
                                    <p class="card-text"><strong>Delivery status: </strong><span>${order.orderStatus}</span></p>
                                </div>
                            `;

                            ordersContainer.appendChild(orderItem);
                        });
                    } catch (error) {
                        console.error("Error loading orders:", error);
                        alert("Failed to load orders. Please try again later.");
                    }
                }

                async function updateStatus(orderId) {
                    const newStatus = document.getElementById(`status-select-${orderId}`).value;

                    const response = await fetch(`/api/v1/admin/orders/${orderId}/status`, {
                        method: "PUT",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ status: newStatus })
                    });

                    const data = await response.json();
                    if (data.success) {
                        document.getElementById(`status-${orderId}`).innerText = newStatus;
                        alert("Order status updated!");
                    } else {
                        alert("Error updating status");
                    }
                }

                loadOrders();
            </script>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

        </body>
        </html>
